<UserControl x:Class="SimpleDataGrid.Pager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SimpleDataGrid"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <CheckBox IsChecked="{Binding IsEnablePaging}" Width="20" VerticalAlignment="Center"/>
        <TextBlock Text="{x:Static local:TextManager.Page}"
                   VerticalAlignment="Center"
                   Margin="5,0,5,0"/>
        <TextBox Width="40"
                 VerticalContentAlignment="Center"
                 Text="{Binding CurrentPageIndex}"
                 IsEnabled="{Binding IsEnablePaging}"/>
        <TextBlock Text="{x:Static local:TextManager.Of}"
                   VerticalAlignment="Center"
                   Margin="4 0 4 0"
                   FontSize="12"/>
        <TextBlock VerticalAlignment="Center"
                   Margin="0,0,5,0"
                   Text="{Binding PageCount}"/>
        <Button Content="&lt;"
                Width="35"
                VerticalAlignment="Center"
                IsEnabled="{Binding IsEnablePaging}"
                Command="{Binding PrevCommand}"/>
        <Button x:Name="NextPageButton"
                Content="&gt;"
                Width="35"
                VerticalAlignment="Center"
                IsEnabled="{Binding IsEnablePaging}"
                Command="{Binding NextCommand}"/>
        <TextBlock VerticalAlignment="Center"
                   Margin="5,0,5,0"
                   Text="{Binding ItemCount}"/>
        <TextBlock Text="{x:Static local:TextManager.Rows}"
                   VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
